#Installing and setting up geneterface
git clone -b release --single-branch --recurse-submodules -j8 https://github.com/veronicaandric/geneterface.git
pip3 install -r requirements.txt

#Setting up Mongo server, fetch, install and run
python3 -m modules.MongoServer -f
python3 -m modules.MongoServer -i
python3 -m modules.MongoServer

Fetches and installs mongodb:
python3 geneterface.py -mongo_init

Run mongo server:
python3 geneterface.py -mongo_run
Fetch exphenosion data:
python3 geneterface.py -exphenosion_init
Fetch cangene data:
python3 geneterface.py -cangene_init

#Setting up CanGENE databases: fetch and upload to mongo database
python3 -m modules.CANgene -f
python3 -m modules.CANgene -u

#Run
export FLASK_APP=geneterface.py
python3 -m flask run
